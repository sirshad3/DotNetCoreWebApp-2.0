@model Dot_net_ModelViewController.Models.LoginCredential
@{
    ViewData["Title"] = "Login Page";
    Layout = null;
   var invaliduser = TempData["InvalidUser"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container" style="height: 450px;">
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-4"></div>
                                <div class="col-sm-4">
                                    <form class="form-horizontal" asp-action="Index">
                                        <div class="form-group">
                                            @if (invaliduser != null)
                                            {
                                                <div style="font-size:medium; color:red; text-align:center">@invaliduser</div>
                                            }
                                            <label class="control-label">User Name</label>
                                            <input asp-for="UserName" class="form-control" type="text" required ="Please enter" />
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Password</label>
                                            <input asp-for="Password" class="form-control" type="password" required />
                                        </div>
                                        <div style="height: 10px;"></div>
                                        <div class="form-group">
                                            <input type="submit" value="Submit" />
                                        </div>
                                    </form>
                                </div>
                                <div class="col-sm-4"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <footer class="border-top footer text-muted">
            <div class="container">
                © 2025 - Pfizer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
}
</html>